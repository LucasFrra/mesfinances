generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
}

model User {
  id         Int      @id @default(autoincrement())
  supabaseId String   @unique
  email      String   @unique
  createdAt  DateTime @default(now())

  // Relations
  expenses   Expense[]
  categories Category[]
  // incomes    Income[]
}

model Category {
  id     Int          @id @default(autoincrement())
  name   String
  color  String?
  icon   String?
  type   CategoryType
  userId String? // si null → catégorie de base (globale)
  user   User?        @relation(fields: [userId], references: [supabaseId])

  // Relations
  expenses Expense[]
  // incomes   Income[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  title       String
  amount      Float
  date        DateTime @default(now())
  notes       String?
  isRecurring Boolean  @default(false)
  showInStats Boolean  @default(true)

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [supabaseId])

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}

enum CategoryType {
  EXPENSE
  INCOME
}
